@model GraniteHouse.Models.ViewModel.ProductsViewModel
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Create Product</h2>

<form method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Products.Name" class="form-control" />
            </div>
            <span asp-validation-for="Products.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="Products.Price" class="form-control" />
            </div>
            <span asp-validation-for="Products.Price" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Image"></label>
            </div>
            <div class="col-5">
                <input type="file" name="files" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.ProductTypeId"></label>
            </div>
            <div class="col-5">
                <select class="form-control" asp-for="Products.ProductTypeId" asp-items="@(new SelectList(Model.ProductTypes, "Id", "Name"))">
                    <option value="">--Select Product Type--</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.SpecialTagsId"></label>
            </div>
            <div class="col-5">
                <select class="form-control" asp-for="Products.SpecialTagsId" asp-items="@(new SelectList(Model.SpecialTags, "Id", "Name"))">
                    <option value="">--Select Special Tags--</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.ShadeColor"></label>
            </div>
            <div class="col-5">
                <input asp-for="Products.ShadeColor" class="form-control" />
            </div>
            <span asp-validation-for="Products.ShadeColor" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Avaliable"></label>
            </div>
            <div class="col-5">
                <input type="checkbox" asp-for="Products.Avaliable" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <button type="submit" class="btn btn-primary" value="Create">Create</button>
            <a asp-action="Index" class="btn btn-success">Back to list</a>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



