@model IEnumerable<GraniteHouse.Models.Products>
@{
    ViewData["Title"] = "Index";
}

<br /><br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product Types list</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Product Types</a>
    </div>
</div>


<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Price)</th>
            <th>@Html.DisplayNameFor(m => m.Avaliable)</th>
            <th>@Html.DisplayNameFor(m => m.ProductTypeId)</th>
            <th>@Html.DisplayNameFor(m => m.SpecialTagsId)</th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(m => item.Name)</td>
            <td>@Html.DisplayFor(m => item.Price)</td>
            <td>@Html.DisplayFor(m => item.Avaliable)</td>
            <td>@Html.DisplayFor(m => item.ProductTypes.Name)</td>
            <td>@Html.DisplayFor(m => item.SpecialTags.Name)</td>
            <td>
                <partial name="_TableButtonPartial" model="item.Id" />
            </td>
        </tr>
        }
    </table>
</div>



